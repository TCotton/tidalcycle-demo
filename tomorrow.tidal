do 
  let drone = slice 4 (slow "2" "[1 2] [3 4]")
              $ qtrigger 
              $ sound "<b_indian:0>"
              # orbit 3 
              # gain 0.9
              # room 0.3
  let sNoise = sound "<b_noise:0> / 4" 
              # n ( choose [0,2,4,6] )
	      # gain 0.6 
	      # room 0.3 
              # orbit 4
  let tamb =  sound "<b_perc:0>" 
	      # gain 0.6
	      # room 0.3	
              # orbit 5
  let sitar = slice 4 (slow "1" "[1 2] [3 4]")
	      $ sound "~ <b_indian:1>"
	      # gain 0.6
	      # room 0.3
	      # orbit 6
  d3 $ stack [ drone ]

